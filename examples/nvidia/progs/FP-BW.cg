void FragmentProgram(
    in float2 fptexCoord : TEXCOORD0 ,
    out float4 colorO       : COLOR0,
    in float4 wpos : WPOS,
    const uniform samplerRECT FPE1 :TEXUNIT0)
{
  float4 t=texRECT(FPE1, fptexCoord).rgba;
  t.r=(t.r+t.g+t.b)/3;
  t=t.rrra;
  colorO=t;
}
